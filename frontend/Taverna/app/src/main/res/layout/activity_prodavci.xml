<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#044855">

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_margin="20dp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:fontFamily="sans-serif-light"
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="//ПОНУДА РЕСТОРАНА"
            android:textColor="@color/black"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArtikliLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/zavrsiKupovinu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C0424E"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/store_plus" />


        <TextView
            android:layout_margin="20dp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:fontFamily="sans-serif-light"
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="//КОМЕНТАРИ ПРОДАВЦА"
            android:textColor="@color/black"/>
        <TextView
            android:textColor="#C0424E"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПРОСЕК" />
        <TextView
            android:id="@+id/prosekProdavac"
            android:textColor="#C0424E"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKomentariLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</ScrollView>