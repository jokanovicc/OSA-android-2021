<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#044855">

    <TextView
        android:layout_margin="20dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:fontFamily="sans-serif-light"
        android:background="@color/cardview_light_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="//ДОДАВАЊЕ НОВЕ АКЦИЈЕ"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_margin="50dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:orientation="vertical"
            android:padding="30dp">




            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnDatum1"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Изабери датум"
                android:textSize="11dp"/>
            <TextView
                android:id="@+id/txt_datum"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Од датума"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnDatum2"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Изабери датум"
                android:textSize="11dp"/>
            <TextView
                android:id="@+id/txt_datum2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="До датума"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Попуст у %"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/activity_main_imeEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Изабери производ"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/proizvodi_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp" />





            <Button
                android:id="@+id/activity_main_loginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Додај"
                android:textSize="15sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>